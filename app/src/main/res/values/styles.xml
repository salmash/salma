<?xml version="1.0" encoding="utf-8"?>
<resources><style name="HiddenTitleTheme" parent="@style/Theme.GraduationProject">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
</style>

    <style name="fontstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#18325D</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="instructions_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textColor">#18325D</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="s1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>